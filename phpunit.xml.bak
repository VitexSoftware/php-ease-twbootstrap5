<?xml version="1.0" encoding="UTF-8"?>
<phpunit>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    
    <logging>
        <log type="coverage-clover" target="tests/nb-phpunit-coverage.xml"/>
        <log type="junit" target="tests/nb-phpunit-log.xml" />
        <log type="coverage-text" target="php://stdout"/>
    </logging>
</phpunit>
